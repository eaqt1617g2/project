<% include partials/head %>

<body>
<div class="col-sm-8 col-sm-offset-2">
    <div class="text-center">
        <h1 class=" fa fa-user"> Profile</h1><br>
        <span><strong>user id</strong>: <%= user._id ? user._id : '' %></span><br>
        <span class="fa fa-sign-out"><a href="/"> Sign out</a></span>
        <hr>
        <div class="jumbotron">
            <% if (user.provider == 'local') { %>
            <img src="https://avatars.io/gravatar/<%= user.email %>/140" class="img-circle"><br>
            <strong>email</strong>: <%= user.email %><br>
            <% } %>

            <% if (user.provider == 'facebook') { %>
            <h2 class="fa fa-facebook"> Facebook</h2><br>
            <!--<img src="https://avatars.io/twitter/<%= user.email %>" class="img-circle"><br>-->
            <img src="<%= user.photo_user %>" class="img-circle"><br>
            <strong>id</strong>: <%= user.id %><br>
            <strong>provider_id</strong>: <%= user.provider_id %><br>
            <strong>token</strong>: <%= user.token %><br>
            <strong>name</strong>: <%= user.name %><br>
            <strong>last_name</strong>: <%= user.last_name %><br>
            <strong>displayname</strong>: <%= user.displayname %><br>
            <strong>loginid</strong>: <%= user.loginid %><br>
            <strong>email</strong>: <%= user.email %><br>
            <strong>creation_date</strong>: <%= user.creation_date %><br>
            <strong>last_login_date</strong>: <%= user.last_login_date %><br>
            <% } %>

            <% if (user.provider == 'twitter') { %>
            <h2 class="fa fa-twitter"> Twitter</h2><br>
            <!--<img src="https://avatars.io/twitter/<%= user.email %>" class="img-circle"><br>-->
            <img src="<%= user.photo_user %>" class="img-circle"><br>
            <strong>id</strong>: <%= user.id %><br>
            <strong>provider_id</strong>: <%= user.provider_id %><br>
            <strong>token</strong>: <%= user.token %><br>
            <strong>name</strong>: <%= user.name %><br>
            <strong>last_name</strong>: <%= user.last_name %><br>
            <strong>displayname</strong>: <%= user.displayname %><br>
            <strong>loginid</strong>: <%= user.loginid %><br>
            <strong>email</strong>: <%= user.email %><br>
            <strong>creation_date</strong>: <%= user.creation_date %><br>
            <strong>last_login_date</strong>: <%= user.last_login_date %><br>
            <% } %>

            <% if (user.provider == 'google') { %>
            <h2 class="fa fa-google-plus"> Google</h2><br>
            <!--<img src="https://avatars.io/twitter/<%= user.email %>" class="img-circle"><br>-->
            <img src="<%= user.photo_user %>" class="img-circle"><br>
            <strong>id</strong>: <%= user.id %><br>
            <strong>provider_id</strong>: <%= user.provider_id %><br>
            <strong>token</strong>: <%= user.token %><br>
            <strong>username</strong>: <%= user.name %><br>
            <strong>last_name</strong>: <%= user.last_name %><br>
            <strong>loginid</strong>: <%= user.loginid %><br>
            <strong>displayname</strong>: <%= user.displayname %><br>
            <strong>email</strong>: <%= user.email %><br>
            <strong>creation_date</strong>: <%= user.creation_date %><br>
            <strong>last_login_date</strong>: <%= user.last_login_date %><br>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>